<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="containerButton">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">28sp</item>
        <item name="android:gravity">center</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">0.5dp</item>
    </style>

    <style name="operatorsButton" parent="containerButton">
        <item name="android:background">@color/pink</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="numbersButton" parent="containerButton">
        <item name="android:background">@drawable/button_number_onclick</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>